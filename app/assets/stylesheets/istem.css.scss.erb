@import "foundation_overrides";

$row-width: 1024px;
$block-grid-media-queries: false;

$screen: "only screen";
$small: "only screen";
$medium: "only screen";
$large: "only screen";
$landscape: "only screen";
$portrait: "only screen";


@import "foundation";
@import "mixins";

body {
	background-color: #C5BD99;
}

#container {
        width: 980px;
	margin: 30px auto;  
	background-color: #fff;
	
	box-shadow: 0 0.3em 1em #000000;
	/* For IE 8 */
	-ms-filter: "progid:DXImageTransform.Microsoft.Shadow(Strength=5, Direction=135, Color='#000000')";
	/* For IE 5.5 - 7 */
	filter: progid:DXImageTransform.Microsoft.Shadow(Strength=5, Direction=135, Color='#000000');

}

#head {
	height: 100px;
}

#nav {
  height: 55px;
  background-image: url(<%= asset_path 'istem/line2.jpg' %>);
  background-repeat: repeat-x;
  background-position: 0% 100%;
  line-height: normal;
}

#nav ul {
	list-style: none;
	margin-right: 100px;
}

#nav ul li {
	float: right;
	position: relative;
}

#nav ul a {
	display: table-cell;
	color: #eee;
	font-size: 14px;
	font-weight: bold;
	text-transform: uppercase;
	font-family: Arial,Helvetica,sans-serif;
	padding: 6px 15px;
	text-decoration: none;
	background-color: #69B00E;
    line-height: normal;
	
	border-top: 3px solid #47C836;
	border-left: 3px solid #63af00;
	border-right: 3px solid #50751c;
}

#nav ul a:hover {
	color: #fff;
	background-color: #5B8A1A;
	border-top: 3px solid #6EA61F;
	border-left: 3px solid #304D09;
	border-right: 3px solid #304D09;
	text-decoration: underline;
}

#nav li:hover > ul {
	display: block;
}

#nav li ul {
	position: absolute;
	top: 100%;
	left: 0;
	display: none;
}

#nav li > ul li {
	padding-top: 2px;
}

#nav li ul a {
	display: table-cell;
	vertical-align: middle;
	width: 100px;
	height: 25px;
	text-align: center;
	background: #63af00;
	color: #eee;
	border-top: 3px solid #47C836;
	border-left: 3px solid #63af00;
	border-right: 3px solid #50751c;
}

#content {
    padding: 0 10px;
}

#content p {
   font-family: tahoma, sans-serif;
   font-size: 15px;
}

#content h1 {
   font-family: Georgia, "Times New Roman", Times, serif;
   color: #33A918;
   font-size: 24px;
   padding: 0px 0px 10px 20px;
   margin-bottom: 0;
}

#bottom {
  clear: both; 
  height:25px;
  background-image: url(<%= asset_path 'istem/line.jpg' %>);
  background-repeat: repeat-x;

}

#footer {
}
    
.footer-content {
  font-size: 11px;
  padding: 20px 0 20px;
  background: #fff;
}

a {
   text-decoration: none;
   color: #26910F;   
}
a:hover {
   color: #36DC11;
   text-decoration: underline;
}

img {
	border: none;
}

#page_options {
    margin-top: 10px;
    padding: 10px;
}

#page_options .box {
    margin-bottom: 0;
}

#page_options h2 {
    background: #ddffe9;
    border-bottom: solid 1px #aaaaaa;
    font-size: 1.2em;
    line-height: 1.2em;
    margin: 0;
    padding: 3px 0;
}

#page_options label {
    display: inline-block;
    width: 100px;
}

#page_options hr.space {
    margin: 0;
}
