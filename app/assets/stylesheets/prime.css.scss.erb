* {
	margin:0;
	padding:0;
}

body {
	background: #877F6E;
	font-family: Arial, Helvetica, sans-serif;
}

a {
	#color: #268C0A;
	text-decoration: none;
}

a:hover {
	#color: #369EB5;
}

ul {
    padding-left: 40px;
}

#container {
	width: 1000px;
	margin: 30px auto 0;
	padding: 0;
	
	box-shadow: 0 0.3em 1em #000000;
	/* For IE 8 */
	-ms-filter: "progid:DXImageTransform.Microsoft.Shadow(Strength=5, Direction=135, Color='#000000')";
	/* For IE 5.5 - 7 */
	filter: progid:DXImageTransform.Microsoft.Shadow(Strength=5, Direction=135, Color='#000000');
}

#header {
	padding: 30px 60px;
	background-color: #8CC739;
	border-bottom: 10px solid #4C6813;
}

#header h1 {
	border-top: 1px solid #fff;
}

#header h1 a {
	color: #fff;
	font-size: 60px;
	font-weight: lighter;
	text-decoration: none;
	float: left;
	letter-spacing:-6px;
	border-bottom: 1px solid #fff;
}

#header h2 {
	color: #fff;
	float: right;
	font-size: 20px;
	margin-right: 100px;
	margin-top: 35px;
	padding-left: 4px;
	letter-spacing: 0;
}

#nav {
	height: 40px;
	width: 1000px;
	background-color: #085DAD;
}

#nav ul {
	list-style: none;
    padding-left: 0;
}

#nav ul li {
	float: left;
	padding: 11px 0;
	position: relative;
}

#nav ul a {
	display: table-cell;
	color: #ddd;
	font-size: 13px;
	font-weight: bold;
	text-transform: uppercase;
	font-family: Arial,Helvetica,sans-serif;
	padding: 1px 20px;
	text-decoration: none;
}

#nav ul a:hover {
	color: #fff;
	text-decoration: underline;
}

#nav li:hover {
	background-color:#8CC739;
}

#nav li:hover > ul {
	display: block;
}

#nav li ul {
	position: absolute;
	top: 100%;
	left: 0;
	display: none;
}

#nav li > ul li {
	padding: 0;
	margin: 0;
	border-top: 2px solid transparent;
}

#nav li ul a {
	display: table-cell;
	vertical-align: middle;
	width: 100px;
	height: 40px;
	text-align: center;
	background: #8CC739;
	color: #ddd;
}

#nav li ul li:hover {
	background-color: transparent;
}

#body {
	background: none;
	padding: 12px;
	width: 976px;
	background-color: #31C3E7;
}

#content {
	float: left;
	width: 954px;
	margin: 0;
	padding: 10px;
	background-color: #fff;
	border: 1px solid #ccc;
	border-right-color: #c0c0c0;
	border-bottom-color: #c0c0c0;
    min-height: 400px;
}

.clear {
	clear: both;
}

#footer {
	margin:0 auto 60px;
	width: 1000px;
	
	box-shadow: 0 0.3em 1em #000000;
	
	/* For IE 8 */
	-ms-filter: "progid:DXImageTransform.Microsoft.Shadow(Strength=5, Direction=135, Color='#000000')";
	/* For IE 5.5 - 7 */
	filter: progid:DXImageTransform.Microsoft.Shadow(Strength=5, Direction=135, Color='#000000');
	padding: 0;
	background: #fff;
    position: relative;
	border-top: 10px solid #4C6813;
}

#footer #stevens_logo {
    display: block;
	border: 0;
    margin: 10px;
    right: 40px;
    position: absolute;
}

#copyright {
    text-align: center;
    font-size: .7em;
    padding: 20px;
}

#content h2 {
   #color: #33A918;
   font-family: Arial, Helvetica, sans-serif;
   padding: 1px 0 10px 1px;
   font-size: 20px;
}

#login_form p {
    margin: 20px 0;
}

#page_menu {
    background-color: #fff;
    margin: 20px 0 10px 0;
    padding: 20px 10px;
}
#page_menu hr {
    display: none;
}
#page_options {
    font-size: 1em;
    font-family: Arial, Helvetica, sans-serif;
	width: 934px;
}

#page_options h2 {
    font-size: 1.3em;
    line-height: 1;
    margin-bottom: 1em;
}

#page_options hr.space {
    background: white;
    color: white;
    visibility: hidden;
    clear: both;
}

#page_options .sidemenu_item {
    font-variant: small-caps;
    font-size: .9em;
}

#page_options .sidemenu_item label {
    width: 8em;
    display: inline-block;
}

