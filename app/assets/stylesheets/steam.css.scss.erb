#body {
	background: none;
	padding: 12px;
	width: 956px;
	background-color: #81111E;
    clear: both;
}

#content {
	float: left;
	width: 934px;
	margin: 0;
	padding: 10px;
	background-color: #fff;
	border: 1px solid #ccc;
	border-right-color: #c0c0c0;
	border-bottom-color: #c0c0c0;
    min-height: 400px;
    font-size: 14px;
}

#content h1 {
   color: #B00805;
   font-family: Arial, Helvetica, sans-serif;
   font-size: 24px;
   margin: 1px 0 1.2em 0;
}

#content h1 span.highlight {
   color: #0096E6;
}

#content p {
    margin: 1em 0;
}

#content input {
    margin: .4em 0;
}

.clear {
	clear: both;
}

#footer {
	margin:0 auto 60px;
	width: 980px;
	
	box-shadow: 0 0.3em 1em #000000;
	
	/* For IE 8 */
	-ms-filter: "progid:DXImageTransform.Microsoft.Shadow(Strength=5, Direction=135, Color='#000000')";
	/* For IE 5.5 - 7 */
	filter: progid:DXImageTransform.Microsoft.Shadow(Strength=5, Direction=135, Color='#000000');
}

.footer-content {
	padding: 10px 20px 20px;
	background: #fff;
	border-top: 10px solid #4C6813;
}

.footer-content .alignright {
	float: right;
}

#footer img {
	border: 0;
}

#copyright {
    padding: 10px 0 0 0;
    font-size: 10px;
    text-align: center;
}

.box {
    padding: 20px;
    margin-bottom: 1.5em;
    background: #E5ECF9;
    float: left;
    width: 894px;
}

.error, .notice, .success {
    padding: .8em;
    margin-bottom: 1em;
    border: 2px solid #DDD;
}

.notice {
    background: #FFF6BF;
    color: #514721;
    border-color: #FFD324;
}    

hr.pre_page_options {
    margin: 20px 0;
}

#page_options {
    font-size: 1em;
    font-family: Arial, Helvetica, sans-serif;
    float: left;
	width: 934px;
	margin: 10px 0 0 0;
	padding: 10px;
	background-color: #fff;
	border: 1px solid #ccc;
	border-right-color: #c0c0c0;
	border-bottom-color: #c0c0c0;
}

#page_options h2 {
    font-size: 1.3em;
    line-height: 1;
    margin-bottom: 1em;
}

#page_options hr.space {
    background: white;
    color: white;
    visibility: hidden;
    clear: both;
}

#page_options .sidemenu_item {
    font-variant: small-caps;
    font-size: .9em;
    float: left;
    display: block;
    clear: both;
}

#page_options .sidemenu_item label {
    width: 8em;
    float: left;
    display: block;
}
