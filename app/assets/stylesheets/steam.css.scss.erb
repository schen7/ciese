* {
	margin:0;
	padding:0;
}

body {
	background: #666;
	font-family: Arial, Helvetica, sans-serif;
}

a {
	color: #268C0A;
	text-decoration: none;
}

a:hover {
	color: #369EB5;
}

#container {
	width: 980px;
	margin: 30px auto 0;
	padding: 0;
	
	box-shadow: 0 0.3em 1em #000000;
	/* For IE 8 */
	-ms-filter: "progid:DXImageTransform.Microsoft.Shadow(Strength=5, Direction=135, Color='#000000')";
	/* For IE 5.5 - 7 */
	filter: progid:DXImageTransform.Microsoft.Shadow(Strength=5, Direction=135, Color='#000000');
}

#header {
	padding: 30px 60px;
	background-color: #0096E6;
	border-bottom: 10px solid #0064E6;
}

#header h1 {
	border-top: 1px solid #fff;
}

#header h1 a {
	color: #fff;
	font-size: 60px;
	font-weight: lighter;
	text-decoration: none;
	float: left;
	letter-spacing:-6px;
	border-bottom: 1px solid #fff;
}

#header h2 {
	color: #fff;
	float: right;
	font-size: 20px;
	margin-right: 100px;
	margin-top: 35px;
	padding-left: 4px;
	letter-spacing: 0;
}

ul {
	list-style-type:none;
}

#nav ul
{
	list-style-type:none;
	overflow:hidden;
	background-color: #516F14;
	/*width: 980px;*/
}

#nav li:hover {
	background-color:#0096E6;
}

#nav ul li {
	float:left;
}

#nav ul a {
	display:block;
	font-weight:bold;
	text-align:center;
	padding:4px;
	text-decoration:none;
	text-transform:uppercase;
	font-family:Arial, Helvetica, sans-serif;
	margin:6px 10px 3px 10px;
	
	font-size: 13px;
	color: #ddd;
}

#nav ul a:hover, #nav ul a:active {
	text-decoration:underline;
	
	color: #ffffff;
}

#nav ul ul {
	display:none;
	
	border:solid 1px #b4b4b4;
	margin:0;
	padding:0;
	width:140px;
	position:absolute;
	
	-webkit-box-shadow:0 1px 3px rgba(0,0,0, .3);
	-moz-box-shadow:0 1px 3px rgba(0,0,0, .3);
	box-shadow:0 1px 3px rgba(0,0,0, .3);
	
	background-color: #0096E6;
}

#nav ul ul li {
	text-align: left;
}

#nav ul li:hover ul{
	display:block;
	position:absolute;
}

#nav a.menu_title:hover {
    text-decoration: none;
    cursor: default;
	color: #ddd;
}
