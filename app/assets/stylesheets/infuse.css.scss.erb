body {
	background-color: #DBDADC;
}

#main {
	margin: 30px 0;  
	background-color: #fff;
	
	box-shadow: 0 0.3em 1em #000000;
	/* For IE 8 */
	-ms-filter: "progid:DXImageTransform.Microsoft.Shadow(Strength=5, Direction=135, Color='#000000')";
	/* For IE 5.5 - 7 */
	filter: progid:DXImageTransform.Microsoft.Shadow(Strength=5, Direction=135, Color='#000000');
}

#head img {
	margin-left: 10px;
	margin-top: 10px;
}

#nav {
	height: 30px;
	background-image: url(/static/infuse/img/line2.jpg);
	background-repeat: repeat-x;
	background-position: 0% 100%;
	line-height: normal;
}

#content {
   padding: 0 10px;
}

#bottom {
   clear: both; 
   height: 24px;
   background-image: url(/static/infuse/img/line3.jpg);
   background-repeat: repeat-x;
}

#footer {
    margin-bottom: 20px;
}
    
.footer-content {
	padding: 0 20px;
	background: #fff;
}

a {
   text-decoration: none;
   color: #C5550A;   
}
a:hover {
   color: #FF7F27;
   text-decoration: underline;
}

img {
	border: none;
}

#page_options {
    margin-top: 10px;
    padding: 10px;
}

#page_options a {
    color: #449;
}

#page_options a:hover {
    color: #88d;
    text-decoration: none;
}

#page_options .box {
    margin-bottom: 0;
}

#page_options h2 {
    background: #ddffe9;
    border-bottom: solid 1px #aaaaaa;
    font-size: 1.2em;
    line-height: 1.2em;
    margin: 0;
    padding: 3px 0;
}

#page_options label {
    display: inline-block;
    width: 100px;
}

#page_options hr.space {
    margin: 0;
}

