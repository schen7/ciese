<% provide(:title, 'Profiles') %>

<% provide :js do %>
  <%= javascript_include_tag "common", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "profiles", "data-turbolinks-track" => true %>
<% end %>

<div id="profiles-app" ng-controller="ProfilesAppCtrl">

  <h1>CIESE Participant Profiles</h1>

  <div id="options">
    <ul class="inline-list">
      <li id="options-label">Options:</li>
      <li ng-repeat="option in options"><a href="{{ getPath() }}" ng-class="{highlighted: isHighlighted()}" ng-bind="option.name" ng-disabled="isHighlighted()"></a></li>
    </ul>
  </div>

  <div ng-view></div>

</div>
