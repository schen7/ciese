<% provide(:title, 'Users') %>

<h1>Users</h1>

<table id="users">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Admin?</th>
      <th>Staff?</th>
      <th>Active?</th>
    <th></th>
    <tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.email %></td>
        <td><%= user.admin ? 'Y' : 'N' %></td>
        <td><%= user.staff ? 'Y' : 'N' %></td>
        <td><%= user.active ? 'Y' : 'N' %></td>
        <td>
          <% if user.active %>
          <%= link_to "deactivate", deactivate_user_path(user.id), method: "put" %>
          <% else %>
          <%= link_to "activate", activate_user_path(user.id), method: "put" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
