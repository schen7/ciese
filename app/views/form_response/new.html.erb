<% provide(:title, @form_version.name) %>

<% provide :css do %>
<%= stylesheet_link_tag "forms", media: "all" %>
<% end %>

<div id="form-response">

  <%= form_tag do %>
  <div class="row">
    <div class="large-12 columns">
      <div class="form-field">
        <div class="field-render">
          <h1><%= @form_version.name %></h1>
        </div>
      </div>
    </div>
  </div>
  <% @form_version.fields.each do |field| %>
  <div class="row">
    <div class="large-6 columns last">
      <div class="form-field">
        <div class="field-render <%= field.kind %>-field-render">
          <%= render partial: "admin/forms/#{field.kind.underscore}/render", locals: {field: field, response: @responses[field.id]} %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <input type="submit" name="submit" value="Submit" class="button primary radius">
  <% end %>

</div>
