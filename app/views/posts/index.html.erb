<% provide(:title, 'Posts') %>

<h1>Posts</h1>

<table id="posts">
  <thead>
    <tr>
      <th>Topic ID</th>
      <th>Post Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.topic_id, discussion_topic_path(post.topic_id) %></td>
        <td><%= link_to post.title, discussion_post_path(post) %></td>
        <td><%= link_to "Edit", discussion_edit_post_path(post) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
