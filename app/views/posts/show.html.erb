<% provide(:title, 'Post Info') %>

<h1>Post Info</h1>
<h2><%= @post.title %></h2>
<p><%= @post.content %></p>
<p><%= link_to "Edit", discussion_edit_post_path(@post) %></pi>

<table id="post">
  <thead>
    <tr>
      <th>Comment</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= link_to "Edit", discussion_edit_comment_path(comment) %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
