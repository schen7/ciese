<% provide(:title, 'Topic Info') %>

<h1>Topic Info</h1>
<h2><%= @topic.name%></h2>
<p><%= link_to "New Post", discussion_new_post_path(@topic)  %></p>
<table id="topic">
  <thead>
    <tr>
      <th>Post</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, discussion_post_path(post) %></td>
        <td><%= @topic.posts.count %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
